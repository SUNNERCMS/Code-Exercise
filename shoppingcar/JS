window.onload=function() {
    var cartTable = document.getElementById('cartTable');
    var tr = cartTable.children[1].rows;
    var checkInputs = document.getElementsByClassName('check');
    var checkAllInputs = document.getElementsByClassName('check-all');
    var selectedTotal=document.getElementById('selectedTotal');
    var priceTotal=document.getElementById('priceTotal');
    var yxsp=document.getElementById('yxsp');
    var foot=document.getElementById('foot');
    var selectedViewList=document.getElementById('selectedViewList');
    var deleteAll=document.getElementById('deleteAll');
    //创建计算函数(给选中行添加背景凸显；计算选中商品的数量；选中商品的价格；拼接字符串以显示选中商品的图片）
    function getTotal(){
        var selected=0;
        var price=0;
        var HTMLstr=' ';
        for(var i=0, len=tr.length;i<len;i++){
            if(tr[i].getElementsByTagName('input')[0].checked)
            {
                tr[i].className='on';//当元素被选中时可以添加类，以实现增强效果
                selected+=parseInt(tr[i].getElementsByTagName('input')[1].value);//解析字符串返回一个整数
                price+=parseFloat(tr[i].cells[4].innerHTML);//解析字符串返回浮点数
                HTMLstr+='<div><img src="'+tr[i].getElementsByTagName("img")[0].src+'"><span class="del" index="'+i+'">取消选择</span> </div>'
            }
            else{
                tr[i].className='';
            }
        }
        selectedTotal.innerHTML=selected;
        priceTotal.innerHTML=price.toFixed(2);//保留两位小数
        selectedViewList.innerHTML=HTMLstr;
        if(selected===0)//当取消选择至没有物品时，预览浮层自动隐藏
        {
            foot.className='foot';
        }
    }
    //小计（每栏的小计金额会随着数量的变化而变动）注意取元素的方法
    function getSubTotal (tr){
        var tds=tr.cells;
        var price=parseFloat(tds[2].innerHTML);
        var count=parseInt(tr.getElementsByTagName('input')[1].value);
        var SubTotal=parseFloat(count*price);
        tds[4].innerHTML=SubTotal.toFixed(2);
    }
    //  选择框点击事件（如果选中全选框，则所有选择框打钩，如果有一个没有没有被选中，则全选框不打钩）
    for(var i=0, len=checkInputs.length; i<len;i++){
    checkInputs[i].onclick=function(){
        if(this.className==='check-all check')
        {
            for(var j=0;j<checkInputs.length;j++)
                checkInputs[j].checked=this.checked;
        }
        if(this.checked===false)
        {
            for(var n=0;n<checkAllInputs.length;n++){
                checkAllInputs[n].checked=false;
            }
        }
        getTotal();
    }
    }
    //已选商品的点击事件是控制预览浮层的出现与隐藏
    yxsp.onclick=function(){
        if(foot.className==="foot"){
             if(selectedTotal.innerHTML !=0){
              foot.className='foot show';
             }
        }
        else{
            foot.className="foot";
        }
    };
    //取消选择和事件代理
    selectedViewList.onclick=function(e){
        // if(e){
        //     e=e;
        // }
        // else{
        //     e=window.event;
        // }
        e=e||window.event;//代表事件对象的状态，用来兼容低版本的IE浏览器，
        var el= e.srcElement;
        if(el.className==='del'){
            var index=el.getAttribute('index');
            var input=tr[index].getElementsByTagName('input')[0];
            input.checked=false;
            input.onclick();//选择框点击事件
        }
    }
    //增减商品数量，通过事件代理到父元素行上
    for(var i=0;i<tr.length;i++){
        tr[i].onclick=function(e){
            e=e||window.event;
            var el=e.srcElement;//事件对象的名字，也就是说你点击的对象是谁
            var cls=el.className;// 取该对象的类名
            var input=this.getElementsByTagName('input')[1];
            var val=parseInt(input.value);
            // var subtotal=this.getElementsByClassName('subtotal');
            // var xj=subtotal.innerHTML;
            // var reduce=this.getElementsByClassName('reduce');
            var reduce=this.getElementsByTagName('span')[1];
            switch(cls){
                case 'add':
                    // alert('add');
                    input.value=val+1;
                    reduce.innerHTML="-";
                    getSubTotal(this);
                    getTotal();
                    // xj=val*xj;
                    break;
                case 'reduce':
                    // alert('reduce');
                    if(val>1){
                        input.value=val-1;
                    }
                    if(input.value<=1){
                        reduce.innerHTML='';
                    }
                    getSubTotal(this);
                    getTotal();
                    break;
                case 'delete':
                   var conf=confirm('确定要删除吗？');
                   if(conf){
                       this.parentNode.removeChild(this);//原生JS可以利用删除子节点的方式删除
                   }
                    getTotal();
                    break;
                default:break;
            }
        };// 鼠标点击-鼠标点击增减数量，完成小计，以及底部栏的刷新
        tr[i].getElementsByTagName('input')[1].onkeyup=function(){
            var tr=this.parentNode.parentNode;
            var val=parseInt(this.value);
            var reduce=tr.getElementsByTagName('span')[1];
            if(isNaN(val)||val<1){
                val=1;       //为了使val不进入else语句，避免数量等于1时也出现减号
            }
            // console.log(this.value);1f
            // console.log(val);1
            this.value = val;
            if(val<=1){
                reduce.innerHTML='';
            }
            else{
                reduce.innerHTML='-';
            }
            getSubTotal(tr);
            getTotal();
        };//键盘弹起事件-输入商品数量后完成小计和底部刷新
    }
    deleteAll.onclick=function(){
        if(selectedTotal.innerHTML!=0) {
            var conf = confirm("确定要删除所选项？");
            if (conf) {
                for (var i = 0; i < tr.length; i++) {
                    var input = tr[i].getElementsByTagName('input')[0];
                    if (input.checked) {
                        tr[i].parentNode.removeChild(tr[i]);//数组中个数的减少和i值得不对应关系
                        i--;
                    }
                }
                getTotal();
            }
        }
    }
    checkAllInputs[0].checked=true;
    checkAllInputs[0].onclick();
};
